@model Web.Models.UserLoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .alert {
            transition: opacity 1s ease-out; /* Animation for fading out */
        }

            .alert.hidden {
                opacity: 0; /* Hide the alert initially */
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Login</h2>
        <div class="row justify-content-center">
            <div class="col-sm-6">
                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div id="errorAlert" class="alert alert-danger">
                        @ViewBag.Error
                    </div>
                }
                <form asp-controller="UserLogin" asp-action="PostUser" method="post">
                    <div class="form-group">
                        @Html.LabelFor(x => x.UserName)
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Password)
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password" })
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-info btn-block" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        const errorAlert = document.getElementById('errorAlert');

        if (errorAlert) {
            setTimeout(() => {
                errorAlert.classList.add('hidden'); 
            }, 2000);
        }
    </script>
</body>
</html>
